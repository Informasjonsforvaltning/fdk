{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "extends": ["airbnb", "prettier", "prettier/react","plugin:eslint-comments/recommended"],
  "plugins": ["prettier", "react-hooks", "eslint-comments"],
  "parser": "babel-eslint",
  "globals": {
    "$": false
  },
  "settings": {
    "react": {
      "version": "16.8" // React version. "detect" automatically picks the version you have installed.
      // You can also use `16.0`, `16.3`, etc, if you want to override the detected value.
    }
  },
  "rules": {
    "prettier/prettier": [ // customizing prettier rules (unfortunately not many of them are customizable)
      "error",
      {
        "singleQuote": true
      }
    ],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,
    "no-else-return": 2,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "wrap-iife": 2,
    "react/prop-types": 1,
    "react/forbid-prop-types": ["error", { "forbid": ["any"] }],
    "react/no-array-index-key": "off",
    "react/jsx-props-no-spreading": "off",
    "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["accumulator"] }],
    "no-restricted-globals": ["error", "event", "fdescribe"],
    "no-control-regex": "off",
    "react/no-danger": 0,
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "hrefLeft", "hrefRight", "to" ],
      "aspects": [ "noHref", "invalidHref", "preferButton" ]
    }],
    "react-hooks/rules-of-hooks": "error",
    "eslint-comments/no-unused-disable": "error",
    "jsx-a11y/label-has-for": "off", //*deprecated for label-has-associated-control
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/webpack/*","**/test/**/*.{js,jsx}", "**/*test.{js,jsx}"]}]
  }
}
